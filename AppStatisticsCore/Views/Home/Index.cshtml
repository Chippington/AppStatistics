@model System.Collections.Generic.List<AppStatisticsCore.Models.ApplicationViewModel>

<h2></h2>

<div>
    @foreach (var app in Model) {
        <div class="block-area">
            <div class="row">
                <div class="col-med-8">
                    <div class="tile">
                        <div class="tile-title">@Html.ActionLink(app.source.applicationName, "Details", "Applications", new { appid = app.source.guid })</div>
                        <div class="p-10">
                            <div class="table-responsive">
                                <h4>Latest Exceptions:</h4>
                                <table class="table table-bordered table-hover tile">
                                    <thead>
                                        <tr>
                                            <td style="width:100px"></td>
                                            <td style="width:150px">Time Stamp</td>
                                            <td>Exception Message</td>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var exc in app.latestExceptions) {
                                            <tr>
                                                <td style="text-align:center">View Details</td>
                                                <td>@exc.timeStamp</td>
                                                <td>@exc.message</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <br />
    }
</div>